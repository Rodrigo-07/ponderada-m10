{
    "schemes": [
        "http"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Exemplo de API em Go + Gin com Swagger e integração externa.",
        "title": "Weather API Template",
        "contact": {
            "name": "Rodrigo"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/weather/current": {
            "get": {
                "description": "Consulta a temperatura atual via Open-Meteo",
                "tags": [
                    "weather"
                ],
                "summary": "Temperatura atual",
                "parameters": [
                    {
                        "type": "number",
                        "description": "Latitude",
                        "name": "lat",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "number",
                        "description": "Longitude",
                        "name": "lon",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "number"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}